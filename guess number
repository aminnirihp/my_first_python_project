import random

def welcome():
     print('welcome haji')
     print('i well guess a 1 and 100')
     print('you have to guess it ....')
     print('go go go haji')
     print()

def finish(number, count):
     print('good game')
     print(f'my numbers{number} and guess{count}')
     print()
     answer = input('Do you want to play again')
     if answer.upper() in ['y', 'yes', 'are'] :
          return True
     else:
          return False
     
def win(computer_number, guess):
     return computer_number == guess

def answer(computer_number, guess):
     if computer_number>guess :
        res = 'bala bala bala'
     elif computer_number<guess :
        res = 'bia paiin'
     elif computer_number == guess :
        res = 'ohhh... haji yessss'
     return res

def get_a_guess():
     ans = input('what is your a guess...??')
     return int(ans)

welcome()
continue_playing = True
while (continue_playing):
     computer_number = random.randint(1, 100)

     guess = 0

     count = 0


     while (not win(computer_number, guess)):
          guess = get_a_guess()
          count += 1
          print(answer(computer_number, guess))
          

     continue_playing = finish(computer_number, count)

    


    
